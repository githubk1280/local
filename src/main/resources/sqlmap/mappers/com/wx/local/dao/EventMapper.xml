<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wx.local.dao.EventDao">
	<resultMap type="com.wx.local.beans.Event" id="eventResultMap">
		<id property="id" column="id" />
		<result property="pics" column="pics" />
		<result property="content" column="content" />
		<result property="zanCount" column="zanCount" />
		<result property="viewCount" column="viewCount" />
		<result property="type" column="eventType" />
		<result property="userLocalId" column="userLocalId" />
		<result property="userName" column="userName" />
		<result property="from" column="fromWhere" />
		<result property="status" column="status" />
		<result property="region" column="region" />
		<result property="createTime" column="createTime" />

	</resultMap>

	<select id="getEventWithLimitById" resultMap="eventResultMap"
		parameterType="map">
		SELECT
		*
		FROM Event
		WHERE
		<choose>
			<when test="direction == 'DOWN'">
				id &lt;#{id}
			</when>
			<otherwise>
				id &gt;#{id}
			</otherwise>
		</choose>
		ORDER BY
		createTime DESC
		LIMIT #{offset};
	</select>

	<select id="getEventWithLimitByDate" resultMap="eventResultMap"
		parameterType="map">
		SELECT
		*
		FROM Event
		WHERE
		<choose>
			<when test="direction == 'DOWN'">
				createTime &lt;#{date}
			</when>
			<otherwise>
				createTime &gt;#{date}
			</otherwise>
		</choose>
		ORDER BY
		createTime DESC
		LIMIT
		#{offset};
	</select>

	<select id="getEventWithLimitDate" resultMap="eventResultMap"
		parameterType="map">
		SELECT
		*
		FROM Event
		WHERE
		createTime &lt;#{date}
		ORDER BY
		createTime DESC
		LIMIT
		#{offset};
	</select>

	<insert id="addEvent" parameterType="map">
		INSERT INTO Event
		(pics,content, zanCount, viewCount, eventType, userLocalId,userName,
		fromWhere,
		status, region,
		createTime)
		VALUES
		(#{pics},#{content},#{zanCount},
		#{viewCount},#{type},#{userLocalId},#{userName},
		#{from},#{status},#{region},#{createTime})
	</insert>

</mapper>

